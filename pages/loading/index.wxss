/**index.wxss**/
.container{
  width: 100%;
  height: 100vh !important;
}
image{
  width: 100% !important;
  height: 100% !important;
  -webkit-filter: grayscale(1);
  filter: grayscale(1);
  animation: GrayToNormal 3s ease-in-out alternate;
  -webkit-animation: GrayToNormal 3s ease-in-out alternate; 
  animation-fill-mode: forwards;  
  animation-delay: 2s;
}
.pifeng{
  width: 100%;
  height: 422rpx;
  position: absolute;
  left: 0;
  bottom: 0;
}
@keyframes GrayToNormal /*Safari and Chrome*/
{
    0% {
       -webkit-filter: grayscale(1);
       filter: grayscale(1);
    }
    100% {
      -webkit-filter: grayscale(0);
      filter: grayscale(0);
    }
}
.slogan{
  width: 400rpx;
  height: 200rpx;
  position: absolute;
  top: 50px;
  left: 50%;
  transform: translateX(-50%);
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  animation: ShowSlowly 5s ease-in-out alternate;
  -webkit-animation: ShowSlowly 5s ease-in-out alternate; 
  animation-fill-mode: forwards;  
    
}
@keyframes ShowSlowly /*Safari and Chrome*/
{
    0% {
       opacity: 0
    }
    50% {
      opacity: .3
    }
    80% {
      opacity: .5
    }
    100% {
      opacity: 1
    }
}