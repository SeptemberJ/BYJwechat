.container{
  width: 100%;
  height: 100vh !important;
}
image{
  width: 100% !important;
  height: 100% !important;
}
.contentWrap{
  width: 700rpx;
  height: 100vh;
  position: absolute;
  top: 0;
  left: 25rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.topBlock{
  width: 700rpx;
  height: 100rpx;
  margin: 10px auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.rightBlock , .leftBlock{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  color: #fff;
  font-size: 30rpx;
}
.leftBlock .item{
  width: 160rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 1px solid #fff;
  padding: 10rpx 20rpx;
}
/*middleBlock  */
.middleBlock{
  width: 700rpx;
  height: 300px;
  position: absolute;
  bottom: calc(220rpx + 40px);
  left: 0;
  /* background: pink; */
}
.yuluBlock{
  width: 400rpx;
  height: 300rpx;
  position: absolute;
  bottom: 0;
  left: 0;
   display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start; 
   background: purple; 
  font-size: 30rpx;
  color: #fff;
}
.yuluBlock textarea{
  width: calc(100% - 20rpx);
  height: 200rpx;
  padding: 10rpx;
  font-size: 31rpx;
}
.yuluBlock text{
  width: calc(100% - 20rpx);
}
/*botBlock  */
.botBlock{
  width: 700rpx;
  height: 220rpx;
  padding-bottom: 20px;
  position: relative;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: space-around;
}
.threeBlockMark{
  width: 700rpx;
  height: 80rpx;
  position: relative;
  top: 0;
  left: 0;
  margin: 5rpx auto;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #fff;
  opacity: .3;
}
.threeBlock{
  width: 700rpx;
  height: 80rpx;
  position: absolute;
  top: 0;
  left: 0;
  margin: 5rpx auto;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.threeBlock .item{
  width: 160rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 20rpx;
   color: #fff; 
  font-size: 30rpx;
}
.submitBt{
  width: 700rpx;
  height: 40px;
  text-align: center;
  color: #fff;
  font-weight: bold;
}