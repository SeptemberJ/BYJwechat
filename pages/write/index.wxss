.container{
  width: 100%;
  height: 100vh !important;
}
image{
  width: 100% !important;
  height: 100% !important;
}
.contentWrap{
  width: 700rpx;
  height: 100vh;
  position: absolute;
  top: 0;
  left: 25rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.topBlock{
  width: 700rpx;
  height: 100rpx;
  margin: 10px auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.rightBlock , .leftBlock{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  color: #fff;
  font-size: 30rpx;
}
.leftBlock .item{
  width: 200rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 1px solid #fff;
  padding: 10rpx 20rpx;
}