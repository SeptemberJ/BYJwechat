page{
  background: #efefef;
}
.container{
  width: 100%;
  height: 100vh;
  padding: 0;
}
.container image{
  width: 100%;
  height: 100%;
  -webkit-filter: grayscale(1);
  filter: grayscale(1);
  animation: GrayToNormal 3s ease-in-out alternate;
  -webkit-animation: GrayToNormal 3s ease-in-out alternate; /*Safari and Chrome*/
  animation-fill-mode: forwards;
}

@keyframes GrayToNormal /*Safari and Chrome*/
{
    0% {
       -webkit-filter: grayscale(1);
       filter: grayscale(1);
    }
    100% {
      -webkit-filter: grayscale(0);
      filter: grayscale(0);
    }
}