.container{
  width: 100%;
  height: 100vh !important;
}
image{
  width: 100% !important;
  height: 100% !important; 
}
.bottleBlock{
  width:258rpx;
  height: 150px;
  padding: 8rpx;
  position: absolute;
  top: 150px;
  left: 50%;
  transform: translateX(-50%);
  z-index: 999;
  border: 4px solid #fff;
  border-top-left-radius: 130rpx;
  border-top-right-radius: 130rpx;
  border-bottom-left-radius: 25rpx;
  border-bottom-right-radius: 25rpx;
}
.zaisi{
  width:50rpx;
  height: 50rpx;
  position: absolute;
  top: -54rpx;
  left: 50%;
  transform: translateX(-50%);
  border: 4px solid #fff;
  border-bottom: 0px solid #fff;
}



.bottleBorder{
  /* width:180px;
  height: 280px; */
  width:100px;
  height: 158px;
  position: absolute;
  top: 150px;
  left: 50%;
  transform: translateX(-50%);
  overflow: hidden;
}
.bottleBorder image{
  position: relative;
  top: 0;
  left: 0;
  z-index: 97;
}
.bottleWrap{
  /* width:150px;
  height: 185px; */
  width:72px;
  height: 100px;
  position: absolute;
  top: 42px;
  left: 49%;
  transform: translateX(-50%);
  /* background: #fff;    */
  border-top-left-radius: 70rpx;
  border-top-right-radius: 70rpx;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx; 
  z-index: 98;
  overflow: hidden;
}
.textBlock{
  width: 600rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 150px;
  left: 50%;
  transform: translateX(-50%);
  z-index: 100;
}
.Big{
  font-size: 32rpx;
  color: #000;
  font-weight: bold;
}
.Small{
  font-size: 30rpx;
  color: #000;
}

